<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel del Coordinador"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="#1976D2"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnCrearMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Taller"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#1976D2"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:clipToOutline="true"
        android:outlineProvider="background"/>

    <Button
        android:id="@+id/btnGestionarUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestionar Usuarios"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#1976D2"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:clipToOutline="true"
        android:outlineProvider="background"/>

    <Button
        android:id="@+id/btnAsignarMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asignar Talleres"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#1976D2"
        android:layout_marginBottom="40dp"
        android:padding="12dp"
        android:clipToOutline="true"
        android:outlineProvider="background"/>

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar SesiÃ³n"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#1565C0"
        android:padding="12dp"/>

</LinearLayout>
