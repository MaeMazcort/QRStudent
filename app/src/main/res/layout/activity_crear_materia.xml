<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etNombreMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del taller"
            android:backgroundTint="#1976D2"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etCodigoMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código del taller"
            android:backgroundTint="#1976D2"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etDescripcionMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción del taller"
            android:backgroundTint="#1976D2"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <!-- Nuevos campos para la hora -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario del taller"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etDiasMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Días (ej: Lunes, Miércoles)"
            android:backgroundTint="#1976D2"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etHoraInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de inicio (ej: 08:00)"
            android:inputType="time"
            android:backgroundTint="#1976D2"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etHoraFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de fin (ej: 10:00)"
            android:inputType="time"
            android:backgroundTint="#1976D2"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnGuardarMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Taller"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="#1976D2"
            android:padding="12dp"/>
    </LinearLayout>
</ScrollView>
