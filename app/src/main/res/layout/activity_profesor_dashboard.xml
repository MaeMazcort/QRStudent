<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="bottom"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel del Instructor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnGenerarQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generar QR de asistencia"
        android:textColor="@android:color/white"
        android:backgroundTint="#1976D2"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnAsignarCalificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asignar evaluaciones"
        android:textColor="@android:color/white"
        android:backgroundTint="#1976D2"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnVerHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver calendario"
        android:textColor="@android:color/white"
        android:backgroundTint="#1976D2"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:layout_marginBottom="40dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesiÃ³n"
        android:textColor="@android:color/white"
        android:backgroundTint="#1565C0"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"/>
</LinearLayout>
