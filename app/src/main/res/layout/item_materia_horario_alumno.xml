<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#F5F9FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMateriaNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del taller"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvMateriaCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código: ART102"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tvMateriaHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horario: Mar y Jue, 11:00 - 13:00"
                android:textColor="#1976D2"
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tvMateriaDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del taller"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
